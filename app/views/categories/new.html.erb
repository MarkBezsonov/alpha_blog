<h1 class= "text-center mt-4">Create a New Category</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render "shared/errors", obj: @category %>
      <%= form_with(model: @category, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :name, "Category Name", class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a Name" %>
          </div>
        </div>

        <div class="d-grid mt-3 gap-2 d-md-block text-center">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
    <%= link_to "[ Cancel and return to articles listing ]", articles_path, class: "mb-3 text-center text-info" %>
  </div>
</div>